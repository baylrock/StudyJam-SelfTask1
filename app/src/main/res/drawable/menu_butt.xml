<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#00ffffff" android:startColor="#201414" />
            <corners android:radius="15dp" />
            <stroke android:width="0px" android:color="@color/buttons" />
        </shape>

    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#00ffffff" android:startColor="#d1ffffff" />
            <corners android:radius="15dp" />
            <stroke android:width="0px" android:color="@color/buttons_pressed" />
        </shape>
    </item>


</selector>