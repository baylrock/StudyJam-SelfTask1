<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#00ffffff" android:startColor="#c68585" />
            <corners android:radius="15dp" />
            <stroke android:width="0px" android:color="@color/buttons_pressed" />
            <size android:width="100dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#00ffffff" android:startColor="#FFFFFF" />
            <corners android:radius="15dp" />
            <stroke android:width="0px" android:color="@color/buttons_pressed" />
            <size android:width="100dp" />
        </shape>
    </item>

</selector>

